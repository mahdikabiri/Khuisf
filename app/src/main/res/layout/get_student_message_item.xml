<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="12dp"
    android:background="@android:color/transparent"
    android:elevation="15dp"
   >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/get_student_message_item_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="5dp"
        android:outlineSpotShadowColor="@android:color/transparent"
        android:src="@drawable/ic_avatar_placeholfrt"
        android:outlineAmbientShadowColor="@android:color/transparent"
        app:civ_border_color="@color/mybluecolor"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout9"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout9"
        app:layout_constraintStart_toEndOf="@+id/linearLayout9"
        app:layout_constraintTop_toTopOf="@+id/linearLayout9" />
<androidx.cardview.widget.CardView
    app:cardCornerRadius="20dp"
    android:id="@+id/linearLayout9"
    android:layout_marginEnd="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/custom_withefff_bg_border_blue"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:id="@+id/get_student_message_item_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/get_student_message_item_tvname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="نام"
                android:textAlignment="center"
                android:textSize="17sp" />

            <net.igenius.customcheckbox.CustomCheckBox
                android:id="@+id/get_student_message_item_checkbox"
                android:layout_width="38dp"
                android:layout_height="42dp"
                app:color_checked="#4CAF50"
                app:color_unchecked_stroke="@color/mybluecolor" />

            <TextView
                android:id="@+id/get_student_message_item_tvcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="کد دانشجویی"
                android:textAlignment="center"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>