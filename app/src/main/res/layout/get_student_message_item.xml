<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:id="@+id/get_student_message_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/get_student_message_item_tvname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textAlignment="center"
            android:text="نام"
            android:textSize="17sp" />

        <net.igenius.customcheckbox.CustomCheckBox
            android:id="@+id/get_student_message_item_checkbox"
            android:layout_width="38dp"
            android:layout_height="42dp"
            app:color_unchecked_stroke="@color/mybluecolor"
            app:color_checked="#4CAF50" />

        <TextView
            android:id="@+id/get_student_message_item_tvcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="کد دانشجویی"
            android:textAlignment="center"
            android:textSize="15sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>